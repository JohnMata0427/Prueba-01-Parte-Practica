import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import { requestAPI, requestAPIList }  from "../data/request.js";
import { type MoviesTypes, type MovieListTypes, type Title } from "../data/types.js";

export const prerender = true;

export async function getStaticPaths() {
  try {
    let movies = await (requestAPIList() as Promise<MovieListTypes>);
    if (!movies || !movies.titles) {
      throw new Error('No movies or titles found');
    }
    const paths = movies.titles ? movies.titles.map((movie) => ({ params: { id: movie.id } })) : [];
    return paths;
  } catch (error) {
    console.error('Error in getStaticPaths:', error);
  }
}

let { id } = Astro.params;

let data = await (requestAPI(id) as Promise<MoviesTypes>);

const movies = await (requestAPIList() as Promise<MovieListTypes>);

  function getRandomElement(arr: Title[]) {
  try {
    if (!arr) {
      throw new Error('No array provided');
    }
    const randomIndex = Math.floor(Math.random() * arr.length);
    return arr[randomIndex];
  } catch (error) {
    console.error('Error in getRandomElement:', error);
    return null;
  }
}

let randomMovies = []

for (let i = 0; i < 2; i++) {
  let randomMovie = getRandomElement(movies.titles);
  let request = await (requestAPI(randomMovie?.id ?? 3182279) as Promise<MoviesTypes>)
    
  randomMovies.push(request)
}

